<div class="row">
  <form class="form-horizontal">
    <div class="form-group">
      <label for="input_name" class="col-sm-4 control-label"><%= I18n.t(:name, scope: [:activerecord, :attributes, :vacancy]) %></label>
      <div class="col-sm-6">
        <input type="text" class="form-control" id="input_name" name="name" ng-model="$parent.object.name" placeholder="<%= I18n.t(:name, scope: [:activerecord, :attributes, :vacancy]) %>">
      </div>
    </div>
    <div class="form-group">
      <label for="input_available_to" class="col-sm-4 control-label"><%= I18n.t(:available_to, scope: [:activerecord, :attributes, :vacancy]) %></label>
      <div class="col-sm-6">
        <input type="date" class="form-control" id="input_available_to" name="available_to" ng-model="$parent.object.available_to" placeholder="<%= I18n.t(:available_to, scope: [:activerecord, :attributes, :vacancy]) %>">
      </div>
    </div>
    <div class="form-group">
      <label for="input_salary" class="col-sm-4 control-label"><%= I18n.t(:salary, scope: [:activerecord, :attributes, :vacancy]) %></label>
      <div class="col-sm-6">
        <input type="number" class="form-control" id="input_salary" name="salary" ng-model="$parent.object.salary" placeholder="<%= I18n.t(:salary, scope: [:activerecord, :attributes, :vacancy]) %>">
      </div>
    </div>
    <div class="form-group">
      <label for="input_phone" class="col-sm-4 control-label"><%= I18n.t(:phone, scope: [:activerecord, :attributes, :vacancy]) %></label>
      <div class="col-sm-6">
        <input type="tel" class="form-control" id="input_phone" name="phone" ng-model="$parent.object.phone" placeholder="<%= I18n.t(:phone, scope: [:activerecord, :attributes, :vacancy]) %>">
      </div>
    </div>
    <div class="form-group">
      <label for="input_email" class="col-sm-4 control-label"><%= I18n.t(:email, scope: [:activerecord, :attributes, :vacancy]) %></label>
      <div class="col-sm-6">
        <input type="email" class="form-control" id="input_email" name="email" ng-model="$parent.object.email" placeholder="<%= I18n.t(:email, scope: [:activerecord, :attributes, :vacancy]) %>">
      </div>
    </div>
    <div class="form-group">
      <label for="input_skills" class="col-sm-4 control-label"><%=I18n.t(:skills, scope: [:vacancies, :show])%></label>
      <div class="col-sm-6">
        <div ui-view="skills"></div>
      </div>
    </div>
  </form>
</div>
